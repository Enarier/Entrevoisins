<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.neighbour_list.ListDetailNeighbourActivity"
    tools:showIn="@layout/activity_list_detail_neighbour">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="10dp"
            app:cardMaxElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Caroline"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageViewGeoLocation"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/textViewName" />

                <TextView
                    android:id="@+id/textViewAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewName"
                    android:layout_toRightOf="@id/imageViewGeoLocation"
                    android:padding="16dp"
                    android:text="Saint pierre du mont a 5km" />

                <ImageView
                    android:id="@+id/imageViewPhone"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/imageViewGeoLocation" />

                <TextView
                    android:id="@+id/textViewPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageViewGeoLocation"
                    android:layout_toRightOf="@id/imageViewPhone"
                    android:padding="16dp"
                    android:text="+33 6 86 57 90 14" />

                <ImageView
                    android:id="@+id/imageViewWebsite"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/imageViewPhone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewPhoneNumber"
                    android:layout_toRightOf="@id/imageViewWebsite"
                    android:padding="16dp"
                    android:text="www.facebook.fr/caroline" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="A propos de moi" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="LongtextasfiejlfjsifjisejlfsjefijsfjissssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssLongtextasfiejlfjsifjisejlfsjefijsfjissssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>